    <div class="row">
        @await Component.InvokeAsync("GetDailyRegisterChart")
        @await Component.InvokeAsync("GetWeeklyRegisterChart")
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        @await Component.InvokeAsync("GetMonthlyRegisterChart")
        @await Component.InvokeAsync("GetYearlyRegisterChart")
