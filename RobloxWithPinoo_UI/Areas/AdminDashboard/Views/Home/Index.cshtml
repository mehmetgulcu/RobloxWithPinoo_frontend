}

<div class="container-fluid">
    <div class="row">
        @await Component.InvokeAsync("GetTotalArticleCount")
        @await Component.InvokeAsync("GetTotalCategoriesCount")
    </div>
</div>

@await Component.InvokeAsync("NumberOfArticlesPerCategory")

<div class="container-fluid">
    <div class="row">
        @await Component.InvokeAsync("GetTotalActiveCardsCount")
