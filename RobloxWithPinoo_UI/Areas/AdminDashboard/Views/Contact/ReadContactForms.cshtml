@{
    Layout = "~/Areas/AdminDashboard/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<RobloxWithPinoo_UI.Entity.Dtos.ContactFormDtos.AllContactForms>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h4>Okunmuş İletişim Formları</h4>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive theme-scrollbar">
                    <table class="display" id="basic-1">
                        <thead>
                            <tr>
                                <th>İsim</th>
                                <th>Soyisim</th>
                                <th>Email Adresi</th>
                                <th>Mesaj</th>
                                <th>Gönderilme Tarihi</th>
                                <th>Okundu Durumu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-item-id="@item.Id">
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Message</td>
                                    <td>@item.CreatedDate</td>
                                    @if (item.IsRead == true)
                                    {
                                        <td class="text-success"><span class="badge badge-success">Okunmadı</span></td>
                                    }
                                    <td>
                                        <ul class="action">
                                            <li class="delete"><a data-id="@item.Id" asp-area="AdminDashboard" asp-controller="Contact" asp-action="Delete" asp-route-formId="@item.Id"><i class="icon-trash"></i></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>