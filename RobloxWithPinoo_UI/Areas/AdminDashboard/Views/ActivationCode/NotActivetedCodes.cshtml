@{
    Layout = "~/Areas/AdminDashboard/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<RobloxWithPinoo_UI.Entity.Dtos.ActivationCodeDtos.ActivationCodeListDto>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h4>Aktif Olmayan Kodlar Tablosu</h4>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive theme-scrollbar">
                    <table class="display" id="basic-1">
                        <thead>
                            <tr>
                                <th>Kod</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.CreatedDate</td>
                                    <td>
                                        @if (item.IsActive == false)
                                        {
                                            <span class="badge bg-danger text-white rounded-pill p-2">Aktif Değil</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>