@{
    Layout = "~/Areas/AdminDashboard/Views/Shared/_Layout.cshtml";
}

@model List<string>

<h2>Resim Yükle ve Liste</h2>

<form asp-area="AdminDashboard" asp-controller="ImageStorage" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Resim Seçin:</label>
        <input type="file" class="form-control-file" id="file" name="file">
    </div>
    <button type="submit" class="btn btn-primary">Yükle</button>
</form>

<hr />

@if (Model.Count > 0)
{
    <h3>Resimler</h3>
    <div class="row">
        @foreach (var imageUrl in Model)
        {
            <div class="col-md-4">
                <img src="@imageUrl" class="img-thumbnail" alt="Resim">
            </div>
        }
    </div>
}
else
{
    <p>Hiçbir resim bulunamadı.</p>
}